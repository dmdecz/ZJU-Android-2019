<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/video_rl_player"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center">

		<com.example.zju_android_2019.IJKPlayer.IJKPlayer
			android:id="@+id/video_ijkPlayer"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<TextView
			android:id="@+id/video_tv_play_end"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#030303"
			android:gravity="center"
			android:text="播放结束"
			android:textColor="#ddd"
			android:textSize="30dp"
			android:visibility="invisible" />

		<include
			android:id="@+id/video_player_bar"
			layout="@layout/include_video_bar"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:layout_alignParentBottom="true" />

		<RelativeLayout
			android:id="@+id/video_rl_loading"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:background="#de262a3b">

			<TextView
				android:id="@+id/video_tv_load_msg"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/video_pb_loading"
				android:layout_centerInParent="true"
				android:layout_marginTop="6dp"
				android:text="正在加载"
				android:textColor="#ffffff"
				android:textSize="16sp" />

			<ProgressBar
				android:id="@+id/video_pb_loading"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_centerInParent="true"
				android:layout_marginTop="60dp"
				android:indeterminate="false"
				android:indeterminateDrawable="@drawable/video_loading"
				android:padding="5dp" />
		</RelativeLayout>

	</RelativeLayout>
</RelativeLayout>