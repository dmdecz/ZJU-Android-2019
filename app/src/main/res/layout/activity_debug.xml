<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<Button
				android:id="@+id/debug_btn_print_path"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:text="print_absolute_path" />

			<TextView
				android:id="@+id/debug_tv_path"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

			<Button
				android:id="@+id/debug_btn_request_permission"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginTop="10dp"
				android:text="request_storage_permission" />

			<EditText
				android:id="@+id/debug_et_write"
				android:layout_width="match_parent"
				android:layout_height="80dp" />

			<Button
				android:id="@+id/debug_btn_write"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:text="write" />

			<Button
				android:id="@+id/debug_btn_show"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginTop="10dp"
				android:text="show" />

			<TextView
				android:id="@+id/debug_tv_show"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>


	</ScrollView>

</LinearLayout>